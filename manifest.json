{
  "name": "Pinboard Quick",
  "version": "0.1",
  "description": "Quickly bookmark the current tab to Pinboard.",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "commands": {
    "bookmark-tab": {
      "suggested_key": { "default": "Ctrl+Shift+O" },
      "description": "Bookmark current tab"
    }
  },
  "permissions": [
    "tabs",
    "storage",
    "*://*.pinboard.in/"
  ],
  "options_page": "options.html",
  "manifest_version": 2
}
